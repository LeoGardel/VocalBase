<div class="navbar navbar-fixed-top navbar-inverse">
	<div class="navbar-inner">
		<div class="container">
			<div style="margin-top: 20px;">
				<%= link_to "Vocal Base", root_path, class: "brand" %>
				<ul class="nav">
					<li><%= link_to "Upload" %></li>
					<li><%= link_to "Pesquisa" %></li>
				</ul>
			</div>

			<div class="pull-right" style="margin-top: -2px;">
				<% if user_signed_in? %>
					<%= current_user.email %>
				<% else %>
					<%= render 'devise/sessions/new' %>
				<% end %>
				<%= link_to_function "Não é cadastrado?", "#", id: "nao-cadastrado" %>
				<div id="popover-cadastro" style="display: none;"><%= render 'devise/registrations/new' %></div>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript">
	$('#nao-cadastrado').popover({
		title: '<h2 style="margin: 0px;">Cadastre-se:</h2>',
		html: true,
		content: function() {
			return $('#popover-cadastro').html();
		},
		placement: 'bottom'
	});
</script>